{
  "env": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "mcp__figma__get_screenshot",
      "mcp__figma__get_design_context",
      "Bash(gh api:*)",
      "Bash(gh pr view:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(date)",
      "Bash(env)",
      "Bash(* --help)",
      "Bash(* --version)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(pip:*)",
      "Bash(poetry:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(make:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r /:*)",
      "Bash(chmod 777:*)",
      "Bash(> /dev/sda:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(~/.ssh/*)",
      "Read(~/.aws/*)",
      "Read(~/.gnupg/*)",
      "Edit(package-lock.json)",
      "Edit(yarn.lock)",
      "Edit(bun.lockb)",
      "Write(package-lock.json)",
      "Write(yarn.lock)",
      "Write(bun.lockb)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-tracker.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt|permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/notify.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/session-tracker.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-tracker.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-tracker.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/session-tracker.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline-command.sh"
  },
  "enabledPlugins": {
    "aiebase-essentials@ebase-marketplace": false,
    "aiebase-github-workflow@ebase-marketplace": true,
    "aiebase-plugin-creator@ebase-marketplace": false,
    "claude-mem@thedotmack": false,
    "rust-analyzer-lsp@claude-plugins-official": true
  },
  "language": "japanese",
  "alwaysThinkingEnabled": false,
  "plansDirectory": "./.claude/plans"
}
